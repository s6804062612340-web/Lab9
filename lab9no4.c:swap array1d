#include<stdio.h>
//function prototype
void swapValue(int *a, int *b, int *c);
void swapArray(int a[], int b[], int size); 
//void swapArray(int *a, int *b, int size); 


int main() {
int a = 1, b = 2, c = 3;
int arrayA[3]={1,2,3}; int arrayB[3]={4,5,6}; 

printf("Before swap function: a=%d, b=%d, c=%d\n", a, b, c);

swapValue(&a ,&b ,&c);
printf("After swap function: a= %d, b=%d, c=%d\n", a, b, c);


printf("Before swap Array: ArrayA:{%d,%d,%d} | ArrayB:{%d,%d,%d}\n",arrayA[0],arrayA[1],arrayA[2],arrayB[0],arrayB[1],arrayB[2]);
//calling swapArray()
swapArray(arrayA,arrayB,3);
printf("After swap Array: ArrayA:{%d,%d,%d} | ArrayB:{%d,%d,%d}\n",arrayA[0],arrayA[1],arrayA[2],arrayB[0],arrayB[1],arrayB[2]);
}

void swapValue(int*a,int*b,int*c){
	int temp;
	temp =*a;
	*a=*b;
	*b=*c;
	*c=temp;

}

void swapArray(int a[],int b[],int size){
	int temp;
	for(int i=0;i<size;i++){
		temp=a[i];
		a[i]=b[i];
		b[i]=temp;
	}
	
}
